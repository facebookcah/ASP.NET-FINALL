@model IEnumerable<Nhom3.Core.Domains.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row bg-primary">
    <div class="col-lg-12">
        <h1 class="page-header" style="text-align:left;">Quản lý sản phẩm</h1>
    </div>
</div>

<button class="btn btn-sm btn-success" style="padding:10px; float:left;margin-top:10px;">
    <a href="@Url.Action("Create","Product")" style="text-decoration: none; color: white;">+Thêm sản phẩm</a>
</button>

<div class="row">
    <div class="col-lg-12">

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Tên danh mục</th>
                    <th>Giá bán</th>
                    <th>Giá khuyến mãi</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {

                <tbody>
                    <tr>

                        <td>@item.MaSP</td>
                        @{
                            //Lấy  đường  dẫn  file  ảnh
                            string ImagePath = "~/wwwroot/Content/images/" + item.Anh;
                        }

                        <td><img src="@Url.Content(ImagePath)" width="50" height="50" class="img-thumbnail" />
                        <br />
                       
                        </td>
                        <td>@item.TenSP</td>
                        <td>@item.DanhMuc.TenDM</td>
                        <td>@item.Gia</td>
                        <td>@item.GiaKM</td>
                      

                        <td>
                            <button class="btn  btn-sm btn-info">
                                <a href="@Url.Action("Details","Product", new{id = item.MaSP})" style="text-decoration: none; color: white;">Xem</a>
                            </button>
                            <button class="btn  btn-sm btn-warning">
                                <a href="@Url.Action("Edit","Product" , new {id = item.MaSP })" style="text-decoration: none; color: white;">Sửa</a>
                            </button>
                            <button class="btn  btn-sm btn-danger">
                                <a href="@Url.Action("Delete","Product", new{id = item.MaSP})" style="text-decoration: none; color: white;">Xoá</a>
                            </button>

                        </td>
                    </tr>

                </tbody>
            }

        </table>
    </div>
</div>

