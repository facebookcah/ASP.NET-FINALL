@model IEnumerable<Nhom3.Core.Domains.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row bg-primary">
    <div class="col-lg-12">
        <h1 class="page-header" style="text-align:left;">Quản lý tài khoản</h1>
    </div>
</div>

<button class="btn btn-sm btn-success" style="padding: 10px; margin-top:20px; float:left;">
    <a href="@Url.Action("Create","Account")" style="text-decoration: none; color: white;">+Thêm tài khoản</a>
</button>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Tên đăng nhập</th>
                    <th>Mật khẩu</th>
                    <th>Quyền</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Tình trạng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.TenTaiKhoan</td>
                        <td>@item.MatKhau</td>
                        <td>@item.Quyen</td>
                        <td>@item.Email</td>
                        <td>@item.SoDienThoai</td>
                        @if (item.TinhTrang)
                        {
                            <td>Hoạt động</td>
                        }
                        else
                        {
                            <td>Không hiệu lực</td>
                        }


                        <td>
                            <button class="btn btn-sm btn-info">
                                <a href="@Url.Action("Details","Account", new {id = item.TenTaiKhoan})" style="text-decoration: none; color: white;">Xem chi tiết</a>
                            </button>
                            <button class="btn btn-sm btn-warning">
                                <a href="@Url.Action("Edit","Account",new {id = item.TenTaiKhoan })" style="text-decoration: none; color: white;">Sửa</a>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <a href="@Url.Action("Delete","Account",new {id = item.TenTaiKhoan })" style="text-decoration: none; color: white;">Xóa</a>
                            </button>
                        </td>
                    </tr>


                </tbody>
            }

        </table>

    </div>
</div>
</div>